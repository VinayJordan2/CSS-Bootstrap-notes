> CSS code
/*font-family*/
p {
font-family: "Arial";
}
/*can use https://www.cssfontstack.com/ to check the fonts compatible on different OS*/
h1 {
font-family: "Indie Flower";
}
/*font-size*/

body { font-size: 10px; }

h1 {font-size: 5.0em;}

p {font-size: 2.0em;}

span { font-size: 2.0em; }

/*font-weight*/
p {font-weight: bold;}
/*can use font-weight from 100 to 800 (only in hundreds*/
/*line-height*/
p {line-height: 1.5;}
/*text-align*/
h1 {text-align: right;}

p {text-align: center;}
/*text-decoration*/
p {text-decoration: underline;}

h1 {text-decoration: line-through; }

